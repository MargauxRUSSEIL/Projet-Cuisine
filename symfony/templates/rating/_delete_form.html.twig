    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rating.id) }}">
    <button class="btn btn-danger uk-margin-medium-bottom pr-3 uk-margin">
        <img class="mr-1" src="https://img.icons8.com/flat_round/64/000000/delete-sign.png" width="25"/>supprimer</button>
</form>
