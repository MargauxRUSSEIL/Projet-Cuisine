{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<body class="uk-flex uk-flex-center uk-flex-middle uk-background-cover uk-text-secondary" data-src="{{ asset('build/renovation.jpg') }}" uk-img>
    <div class="card card-login shadow" style="width: 50rem; border-radius: 30px;">
        <div class="card-body mx-5 my-5">
            <h2 class="card-title mb-5 mt-3 text-center text-uppercase">Connectez-vous</h2>
            <p class="card-text">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <label for="inputUsername">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    <label class="mt-2" for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="card-text mt-4">
                        <div class="row">
                            <div class="col">
                                <button class="btn btn-lg btn-warning" type="submit">
                                    Sign in
                                </button>
                            </div>
                            <div class="col text-right mt-2">
                                <a class="text-dark" style="text-decoration: none;" href="{{ path('app_register') }}">Pas encore inscrit ?</a>
                            </div>
                        </div>
                    </div>
                </form>
            </p>
        </div>
    </div>
</body>

{% endblock %}
