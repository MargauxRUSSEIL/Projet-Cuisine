<form method="post" action="{{ path('create_recette_delete', {'id': create_recette.id}) }}"
onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette recette ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ create_recette.id) }}">
    <button class="btn btn-danger uk-margin-medium-bottom pr-3">
        <img class="mr-1" src="https://img.icons8.com/flat_round/64/000000/delete-sign.png" width="25"/>supprimer
    </button>
</form>
