<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger uk-margin-bottom pr-4">
        <img class="mr-1" src="https://img.icons8.com/flat_round/64/000000/delete-sign.png" width="25"/>supprimer
    </button>
</form>
